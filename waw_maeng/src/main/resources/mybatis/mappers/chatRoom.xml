   <!--방 만들기-->
   <insert id="insertChatRoom"  parameterType="ChatRoomVO">
		<![CDATA[
			 INSERT INTO chatRoom
    			(title)
			 VALUES
			    (#{title})
		]]>      
   </insert>
   
   <!-- 특정 방 가져오기 --> 
  	<select id="selectChatRoomByTid" resultType="ChatRoomVO"  parameterType="ChatRoomVO" >
      <![CDATA[
         select * from chatRoom
         where
         roomTid=#{roomTid}
      ]]>
   </select>
   
